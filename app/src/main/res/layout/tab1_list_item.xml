<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:padding="4sp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/tv_icon"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:src="@mipmap/logo1"/>
    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/app_description"
            android:paddingLeft="4dp"
            android:layout_width="200dp"
            android:layout_height="54dp">
            <TextView
                android:layout_alignParentTop="true"
                android:id="@+id/tv_title"
                android:textSize="16sp"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Titleaaaaaaaaa"/>
            <RelativeLayout
                android:layout_below="@id/tv_title"
                android:id="@+id/tv_content"
                android:textSize="11sp"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_alignParentLeft="true"
                    android:id="@+id/app_downloadTimers"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="22万次下载"/>
                <TextView
                    android:layout_toRightOf="@id/app_downloadTimers"
                    android:layout_marginLeft="12sp"
                    android:id="@+id/app_Size"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="19.56MB"/>
            </RelativeLayout>
            <TextView
                android:layout_alignParentBottom="true"
                android:id="@+id/tv_description"
                android:textSize="11sp"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="contentaaaaaaaaaaaaaa"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_alignParentRight="true"
            android:layout_marginRight="30sp"
            android:id="@+id/app_download"
            android:layout_width="100dp"
            android:layout_height="54dp"
            android:gravity="center"
            android:layout_weight="1">
            <TextView
                android:focusable="false"
                android:id="@+id/app_downloading"
                android:gravity="center"
                android:textSize="12sp"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:background="#4083CE"
                android:textColor="#fff"
                android:text="下载"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
