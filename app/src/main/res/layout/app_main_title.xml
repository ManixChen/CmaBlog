<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:paddingTop="15sp"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="80sp">
    <ImageView
        android:id="@+id/main_app_logo"
        android:layout_alignParentLeft="true"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_marginLeft="30sp"
        android:src="@mipmap/logo3"/>
    <RelativeLayout
        android:layout_marginLeft="5sp"
        android:layout_toRightOf="@id/main_app_logo"
        android:layout_width="match_parent"
        android:layout_height="fill_parent">
        <TextView
            android:id="@+id/main_app_title"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="秦天大圣"
            android:textSize="18sp"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="40sp">
            <TextView
                android:id="@+id/main_no_ad"
                android:padding="3sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="无广告"
                android:textSize="12sp"
                android:background="#93FF9B"
                android:textColor="@color/colorFontWhite"/>
            <TextView
                android:layout_marginLeft="8sp"
                android:padding="3sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="无广告"
                android:textSize="12sp"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorFontWhite"/>

            <TextView
                android:id="@+id/main_app_dowloadTimes"
                android:layout_marginLeft="8sp"
                android:padding="3sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6437万次下载"
                android:textSize="12sp"
                android:textColor="#626262"/>
            <TextView
                android:layout_marginLeft="8sp"
                android:padding="3sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|"
                android:textSize="12sp"
                android:textColor="#000"/>
            <TextView
                android:id="@+id/main_app_size"
                android:layout_marginLeft="8sp"
                android:padding="3sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="32.33MB"
                android:textSize="12sp"
                android:textColor="#626262"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
